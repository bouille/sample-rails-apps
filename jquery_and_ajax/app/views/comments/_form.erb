<% form_for([@post, @comment]) do |f| %>
  <%= error_messages_for :comment, :header_message => nil, :message => nil %>
  
  <p>Name: <br/>
  <%= f.text_field :name %></p>
  
  <p>Email: <br/>
  <%= f.text_field :email %></p>
  
  <p>Url: <br/>
  <%= f.text_field :url %></p>
  
  <p>Text: <br/>
  <%= f.text_area :text %></p>
  
  <%= submit_tag 'Preview', :name => 'preview' %>
  <%= submit_tag 'Add comment' %>
<% end %>